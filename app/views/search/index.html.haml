#map-canvas

%header.search-pane
  %h1 Food Finder

  %form.search
    .search-location
      %input#search{ name: 'query', placeholder: 'Address / City / Zip' }
      %button{:class => "btn btn-options"} Options

    .options
      %p I am looking for:
      .search-type
        %ul
          %li
            %input{ :id => "groceries", :type => "checkbox", :name => 'groceries', value: '1' }
            %label{ :for => "groceries" } Groceries
          %li
            %input{ :id => "hot_meals", :type => "checkbox", :name => 'hot_meals', value: '1' }
            %label{ :for => "hot_meals" } Hot Meals
          %li
            %input{ :id => "brown_bag", :type => "checkbox", :name => 'brown_bag', value: '1' }
            %label{ :for => "brown_bag" } Brown Bag (55+ only)

.results-container.slide.in
  %main.results-pane
    %h2 Results
    %hr
    #results
